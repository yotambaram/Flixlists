<div class="container">








    <div class="row">
        <div id="apiCard" class="section">
            <form class="col s12" id="movie_search">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="movie_search_title" type="text" />
                        <label for="movie_search_title">Enter a Movie Title:</label>
                        <button class="btn waves-effect waves-light btn-large" type="submit" name="action">
                            Search!
                        </button>

                    </div>
                </div>
            </form>
            <div class="row">
                <div class="card col s12">
                    <div class="card-content blue-text">
                        <span class="card-title" id="results-title">
                            <div class="divider"></div>
                        </span>
                        <div class="row" id="movies-view">
                            

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- This, along with everything else, needs tweaking. it'll work for now though. -->
    <div class="row">



        {{#each userList}}
        <div class="section col s12" id="movie-lists">


            <ul class="collection with-header col s12">
                 <li class="collection-header"><h4>{{list_title}}</h4></li>

                {{#each Movies}}

                <li class="collection-item">{{movie_name}}</li>


                {{/each}}
                <li class="collection-item"><button class="btn waves-effect waves-light btn-large add-to-list"
                        type="submit" name="action" data-id={{id}}>
                        Add to list!
                    </button></li>
            </ul>




        </div>
        {{/each}}
    </div>
    <div class="row">
        <div class="section">
            <form class="col s6 offset-s3" id="add-new-list-form">
                <h5>My Lists</h5>
                <div class="row">
                    <ul class="collection">
                        {{#each userList}}
                        <li class="collection-item">{{list_title}}</li>
                        {{/each}}
                    </ul>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input type="text" id="add-new-list-name" />
                        <label for="add-new-list">Start a new list:</label>
                        <button class="btn waves-effect waves-light btn-large" type="submit" name="action">
                            Submit
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
</div>
